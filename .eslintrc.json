{
  "env": {
    "browser": false,
    "node": true,
    "es2020": true
  },
  "extends": [
    // 마지막 속성만 적용된다.
    "eslint:recommended",
    "plugin:prettier/recommended" // prettier와 연결
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    // 자바스크립트를 Parsing하는 옵션 설정
    "ecmaVersion": 11, // ECMA 버전
    "sourceType": "module" // import, export 사용
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "no-unused-vars": 0,
    "no-undef": 1
  }
}
